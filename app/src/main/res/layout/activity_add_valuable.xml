<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddValuableActivity" android:orientation="vertical">

    <EditText
            android:id="@+id/addItemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:inputType="text"
            android:hint="@string/item_name_hint"
    />
    <EditText
            android:id="@+id/addItemDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/addItemName"
            android:inputType="text"
            android:hint="@string/item_desription_hint"
    />
    <EditText
            android:id="@+id/addItemPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/addItemDescription"
            android:inputType="numberDecimal"
            android:hint="@string/item_price_hint"
    />
    <ImageView
            android:id="@+id/addItemImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/addItemPrice"
            app:srcCompat="@mipmap/valuables_launcher_foreground"
    />
    <!--
    <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:onClick="returnData"
            android:text="@string/save_item"
    />
    -->

    <android.support.design.widget.FloatingActionButton
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="16dp"
            android:focusable="true"
            android:clickable="true"
            app:srcCompat="@drawable/ic_check_white_24dp"
            app:backgroundTint="@android:color/holo_red_dark"/>
</RelativeLayout>